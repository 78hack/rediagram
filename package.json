{
  "name": "rediagram",
  "version": "0.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "docker",
    "packages/*",
    "component-libraries/*",
    "examples/*"
  ],
  "scripts": {
    "lerna": "lerna",
    "build": "lerna run --parallel build",
    "watch": "lerna run --parallel watch",
    "rediagram": "yarn workspace @rediagram/cli start",
    "lint": "eslint -c .eslintrc.json --ext ts,tsx component-libraries packages examples",
    "example:gallery": "yarn workspace @rediagram/gallery start",
    "example:mdx": "yarn workspace @rediagram/mdx-example start",
    "versionup": "lerna version --conventional-commits",
    "versionup:patch": "lerna version patch --conventional-commits",
    "versionup:minor": "lerna version minor --conventional-commits",
    "versionup:major": "lerna version major --conventional-commits",
    "prerelease": "yarn build",
    "release": "lerna publish from-package",
    "release:canary": "lerna publish --canary",
    "postinstall": "lerna link"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^7.0.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.2",
    "fs-extra": "^9.0.0",
    "lerna": "^3.21.0",
    "prettier": "^2.0.5",
    "rollup": "^2.10.5",
    "rollup-plugin-typescript2": "^0.27.1",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2"
  }
}
